<Page
    x:Class="DenonAVR.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DenonAVR"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Width="Auto" Height="Auto">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.Background>
			<AcrylicBrush 
				FallbackColor="#FF1F1F1F" 
				TintColor="#FF1F1F1F" 
				TintOpacity="0.1" 
				BackgroundSource="HostBackdrop"/>
		</Grid.Background>
		<StackPanel Margin="20,32,20,0" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
			<TextBlock x:Name="MainPageTitle" Text="Title" FontSize="60" FontFamily="Segoe UI"/>
			<Frame x:Name="rootFrame" />
		</StackPanel>
	</Grid>
</Page>
